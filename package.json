{
	"name": "@metacoin/browser-extensionizer",
	"version": "0.2.19",
	"description": "Metacoin browser extension",
	"main": "dist/browser-extensionizer.cjs.min.js",
	"module": "dist/browser-extensionizer.es.min.js",
	"types": "dist/types/index.d.ts",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "tsc",
		"build:rollup": "rollup -c",
		"build:watch": "yarn build && tsc -w",
		"build:link": "yarn build && cd dist && yarn link && rm -rf node_modules && cd ..",
		"lint": "eslint . --ext ts",
		"lint:fix": "eslint . --ext ts --fix",
		"doc": "typedoc && npx concat-md --decrease-title-levels --dir-name-as-title docs > README.md"
	},
	"keywords": [
		"Browser",
		"Extension"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/MetacoinPlatform/browser-extensionizer.git"
	},
	"engines": {
		"node": ">=12",
		"yarn": "^1.16.0"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"es6": true,
			"node": true,
			"browser": true,
			"webextensions": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended"
		],
		"parserOptions": {
			"ecmaVersion": 2018,
			"parser": "@typescript-eslint/parser",
			"sourceType": "module",
			"plugins": [
				"@typescript-eslint"
			]
		},
		"rules": {
			"no-unused-vars": [
				"warn",
				{
					"vars": "all"
				}
			]
		}
	},
	"author": "Inblock",
	"license": "GPL3.0",
	"dependencies": {
		"@types/chrome": "^0.0.171"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.1.1",
		"@types/node": "^17.0.2",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.3",
		"concat-md": "^0.3.5",
		"eslint": "^8.5.0",
		"rollup": "^2.61.1",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.31.1",
		"ts-node": "^10.4.0",
		"typedoc": "^0.22.10",
		"typedoc-plugin-markdown": "^3.11.8",
		"typescript": "^4.5.4"
	}
}
