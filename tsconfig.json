{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"module": "amd",
		"outFile": "dist/browser-extensionizer.js",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "es5",
		"typeRoots": ["./node_modules/@types"]
	},
	"typedocOptions": {
        "includeVersion": true,
		"excludePrivate": true,
		"hideGenerator": true,
		"out": "docs",
        "theme": "markdown",
        "entryPoints": ["./src/"]
	},
	"include": [
        "./src/*.ts",
        "./src/**/*.ts"
    ],
	"exclude": ["dist", "./node_modules"]
}
