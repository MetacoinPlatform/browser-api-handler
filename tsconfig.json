{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"experimentalDecorators": true,
		"importHelpers": true,
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"module": "es6",
		"target": "es5",
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"DOM",
			"ES2016"
		]
	},
	"typedocOptions": {
		"includeVersion": true,
		"excludePrivate": true,
		"hideGenerator": true,
		"out": "docs",
		"theme": "markdown",
		"entryPoints": [
			"./src/"
		]
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts"
	],
	"exclude": [
		"dist",
		"./node_modules"
	]
}